{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "target": "es2017",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "baseUrl": "./src"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/utils/ChannelService.js",
    "jest.setup.js",
    "src/components/blocks/checkout-complete/BuyerInfo.styles.tsts"
  ],
  "exclude": ["node_modules"]
}
